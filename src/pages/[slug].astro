---
import Layout from "../layouts/Layout.astro";
import { data, ArticleData } from "../utils/medium";

export function getStaticPaths(): Array<{
    params: { slug: string };
    props: { articleData: ArticleData };
}> {
    return data.entries.map((x) => ({
        params: {
            slug: x.slug,
        },
        props: {
            articleData: x,
        },
    }));
}

const { articleData } = Astro.props;
---

<Layout title={articleData?.title ?? "N/A"}>
    <h1>{articleData?.title ?? "N/A"}</h1>
    <article set:html={articleData?.content ?? "N/A"} />
</Layout>
