---
import type { Post } from "../types/Post";
import Layout from "../layouts/Layout.astro";
import { data } from "../utils/medium";

export function getStaticPaths(): Array<Post> {
    return data.entries.map((x) => ({
        params: {
            slug: x.slug,
        },
        props: {
            articleData: x,
        },
    }));
}

const { articleData } = Astro.props;
---

<Layout title={articleData?.title ?? "N/A"}>
    <h1>{articleData?.title ?? "N/A"}</h1>
    <article set:html={articleData?.content ?? "N/A"} />
</Layout>
